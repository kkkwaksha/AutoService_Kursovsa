@model IEnumerable<AutoService.Models.DocumentLine>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DemandDocument.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Part.PartName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Quantity.ToString("F3")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DemandDocument.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part.PartName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LineID }) |
                @Html.ActionLink("Details", "Details", new { id = item.LineID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LineID })
            </td>
        </tr>
    }

</table>

